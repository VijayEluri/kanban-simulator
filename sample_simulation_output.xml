<!-- 
  cycle :: a single "tick" of the simulation clock.
    - Time="-1" means before the simulation begins.
    - Event elements are listed in sequence.
    - Supported events are: { add, promote, pull }
    - To-Be-Supported events are: { change, remove, demote, block, unblock }
    
  add :: a new item appears in the simulation during this cycle.
    - Supported items are: { step, card }
    - To-Be-Supported items are: { teammate }
  
  promote :: the specified card is enqueued in the inventory of the specified step
    - give the animation a "promotion" treatment.
    
  pull :: the specified card is pulled into play in the specified step
  
  change :: an existing item now has new values 
  
  remove :: the specified item is forever removed from the simulation.
  
  demote :: the specified card is enqueued in the inventory of the specified step
    - give the animation a "demotion" treatment.
    
  block :: the specified card was being worked on (i.e. previously pulled) but is
    no longer being worked.
    - give a "blocked" treatment.
    
  unblock :: the specified card was previously blocked, but now is being worked.
    - remove "blocked" treatment.
  
-->

<!-- This simulation mirrors exactly what happened in "movie.f4v" -->
<simulation>
  <cycle time="-1">
    <add>
      <step id="step-1" name="Analysis" wip_limit="3"/>      
    </add>
    <add>
      <step id="step-2" name="Development" wip_limit="2"/>
    </add>
    <add>
      <step id="step-3" name="Acceptance/QA" wip_limit="4"/>
    </add>
    <add>
      <step id="step-4" name="Done" wip_limit=""/>
    </add>
    <add>
      <card id="card-1" story_no="1" name="As a..." estimated_points="2" />
    </add>
    <add>
      <card id="card-2" story_no="2" name="As a..." estimated_points="3" />
    </add>
    <add>
      <card id="card-3" story_no="3" name="As a..." estimated_points="1" />
    </add>
    <add>
      <card id="card-4" story_no="4" name="As a..." estimated_points="3" />
    </add>
    <add>
      <card id="card-5" story_no="5" name="As a..." estimated_points="5" />
    </add>
    <add>
      <card id="card-6" story_no="6" name="As a..." estimated_points="3" />
    </add>
    <promote card_id="card-1" step_id="step-1" />
    <promote card_id="card-2" step_id="step-1" />
    <promote card_id="card-3" step_id="step-1" />
    <promote card_id="card-4" step_id="step-1" />
    <promote card_id="card-5" step_id="step-1" />
    <promote card_id="card-6" step_id="step-1" />
  </cycle>  
  <cycle time="0">
    <pull card_id="card-1" step_id="step-1" />
    <pull card_id="card-2" step_id="step-1" />
    <pull card_id="card-3" step_id="step-1" />
  </cycle>
  <cycle time="1">
    <promote card_id="card-3" step_id="step-2" />
    <pull card_id="card-3" step_id="step-2" />
    <pull card_id="card-4" step_id="step-1" />
  </cycle>
  <cycle time="2">
    <promote card_id="card-1" step_id="step-2" />
    <promote card_id="card-3" step_id="step-3" />
    <pull card_id="card-1" step_id="step-2" />
    <pull card_id="card-3" step_id="step-3" />
    <pull card_id="card-5" step_id="step-1" />
  </cycle>
  <cycle time="3">
    <promote card_id="card-2" step_id="step-2" />
    <promote card_id="card-1" step_id="step-4" />
    <pull card_id="card-2" step_id="step-2" />
    <pull card_id="card-6" step_id="step-1" />
  </cycle>
</simulation>
